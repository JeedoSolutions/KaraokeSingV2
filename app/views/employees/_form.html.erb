<div class="container">
  <div class="row">
    <div class='col-md-8 '>
      <div class="panel panel-info">
        <div class="panel-heading">Formulario Trabajador</div>
        <div class="panel-body">
              <%= simple_form_for @employee, :html => { :class => 'form-horizontal' } do |f| %>
                <%= f.input :nombre  %>
                <%= error_span(@employee[:nombre]) %>
                <%= f.input :apellido  %>
                <%= error_span(@employee[:apellido]) %>
                <%= f.input :dni %>
                <%= error_span(@employee[:dni]) %>
                <%= f.input :correo %>
                <%= error_span(@employee[:correo]) %>
                <%= f.input :password %>
                <%= error_span(@employee[:password]) %>
                <%= f.input :admin, :html => { :class => 'form-inline' }, inline_label: 'Administrador'%>
                
                <%= error_span(@employee[:admin]) %>
                <br>
                <%= f.button :submit, :class => 'btn-info' %>
                <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                              employees_path, :class => 'btn btn-info' %>
               
              <% end %>
        </div>
       
         
       
      </div>
    </div>
  </div>
</div>
